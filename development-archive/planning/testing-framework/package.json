{
  "name": "squiddles-voice-testing-framework",
  "version": "1.0.0",
  "description": "Isolated automated testing framework for Squiddles voice interface",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:voice": "jest --testNamePattern='Voice'",
    "test:integration": "jest --testNamePattern='Integration'",
    "test:performance": "jest --testNamePattern='Performance'",
    "test:all": "jest --verbose",
    "generate-audio": "ts-node scripts/generate-test-audio.ts",
    "start-app": "cd .. && npm run dev",
    "test:ci": "jest --ci --coverage --silent"
  },
  "dependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "jest-html-reporter": "^3.10.2"
  },
  "author": "Claude Code Testing Framework",
  "license": "MIT"
}